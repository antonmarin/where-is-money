# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 120

# We recommend you to keep these unchanged
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.feature]
indent_size = 2

[*.go]
indent_style = tab
[go.mod]
indent_style = tab

[*.js]
indent_size = 2

[*.json]
indent_size = 2
[composer.json]
indent_size = 4

[*.md]
indent_size = unset

[*.neon]
indent_style = tab

[*.sh]
indent_style = tab

[*.tf]
indent_size = 2

[*.ts]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
trim_trailing_whitespace = false

[.gitmodules]
indent_style = tab

[Dockerfile]
indent_style = tab

[Makefile]
indent_style = tab

[package.json]
indent_size = 2

[Gopkg.*]
indent_size = 2
